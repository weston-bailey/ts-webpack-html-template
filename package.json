{
  "name": "webpack-html-template",
  "version": "1.0.0",
  "description": "template for creating vanilla html websites using webpack and nodejs",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack build",
    "serve": "browser-sync start --server --serveStatic ./dist --browser 'Google Chrome'",
    "dev": "npm run build && npm run serve",
    "watch": "nodemon --exec 'npm run build'",
    "open": "npm run dev && open -a 'Google Chrome' ./dist/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "css-loader": "^6.3.0",
    "nodemon": "^2.0.13",
    "style-loader": "^3.3.0",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-html-plugin": "^0.1.1"
  },
  "dependencies": {
    "html-webpack-plugin": "^5.3.2"
  }
}
